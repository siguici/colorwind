{
  "name": "colorwind-monorepo",
  "version": "0.1.1",
  "license": "MIT",
  "packageManager": "pnpm@9.1.4",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.14",
    "pnpm": ">=9.1",
    "npm": "prefer using pnpm",
    "yarn": "prefer using pnpm"
  },
  "type": "module",
  "bugs": "https://github.com/siguici/colorwind/issues",
  "homepage": "https://github.com/siguici/colorwind",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://github.com/siguici"
  },
  "description": "TailwindCSS plugin simplifying light/dark color scheme management with intuitive class names.",
  "keywords": [
    "color-scheme",
    "componants",
    "css",
    "dark-mode",
    "light-mode",
    "plugin",
    "tailwindcss",
    "tailwind-color-scheme",
    "typescript",
    "utilities"
  ],
  "sideEffects": false,
  "private": false,
  "scripts": {
    "build": "pnpm cw.build",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "cw.i": "cd packages/colorwind && pnpm i",
    "cw.up": "cd packages/colorwind && pnpm up",
    "cw.uL": "cd packages/colorwind && pnpm up -L",
    "cw.build": "cd packages/colorwind && pnpm build",
    "debug": "pnpm check && pnpm test",
    "deno.check": "cd packages/colorwind && deno task check",
    "deno.fix": "cd packages/colorwind && deno task fix",
    "dev": "vite",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "inspect": "node --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "lint": "biome check --write .",
    "test": "vitest run",
    "test.ui": "vitest --ui",
    "test.cov": "vitest run --coverage",
    "test.watch": "vitest",
    "start": "vite --open"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@types/node": "^20.14.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "colorwind": "workspace:*",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "postcss-load-config": "^5.1.0",
    "postcss-nested": "^6.0.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}
