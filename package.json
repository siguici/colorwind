{
  "name": "colorwind",
  "version": "0.0.1",
  "license": "MIT",
  "packageManager": "pnpm@9.1.4",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.14",
    "pnpm": ">=9.1",
    "npm": "prefer using pnpm",
    "yarn": "prefer using pnpm"
  },
  "type": "module",
  "module": "./js/index.js",
  "main": "./js/index.js",
  "types": "./ts/",
  "files": ["js/**/*", "ts/**/*"],
  "exports": {
    ".": "./js/index.js",
    "./package.json": "./package.json"
  },
  "bugs": "https://github.com/siguici/colorwind/issues",
  "homepage": "https://github.com/siguici/colorwind",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://github.com/siguici"
  },
  "description": "TailwindCSS plugin simplifying light/dark color scheme management with intuitive class names.",
  "keywords": [
    "color-scheme",
    "componants",
    "css",
    "dark-mode",
    "light-mode",
    "plugin",
    "tailwindcss",
    "tailwind-color-scheme",
    "typescript",
    "utilities"
  ],
  "sideEffects": false,
  "private": false,
  "scripts": {
    "build": "pnpm build.node && pnpm build.deno",
    "build.node": "pnpm clear.node && tsc --build",
    "build.deno": "pnpm clear.deno && pnpm denoify",
    "clear": "pnpm clear.node && pnpm clear.deno",
    "clear.node": "rimraf js && rimraf ts",
    "clear.deno": "rimraf jsr/*",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "debug": "pnpm check && pnpm test",
    "denoify": "denoify --out jsr",
    "dev": "vite",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "inspect": "node --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "lint": "biome check --apply-unsafe .",
    "test": "vitest run",
    "test.ui": "vitest --ui",
    "test.cov": "vitest run --coverage",
    "test.watch": "vitest",
    "start": "vite --open"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@types/node": "^20.12.13",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "denoify": "^1.6.12",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "postcss-load-config": "^5.1.0",
    "postcss-nested": "^6.0.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}
