{
  "name": "colorwind-monorepo",
  "version": "0.1.1",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.18",
    "pnpm": ">=9.12",
    "npm": "prefer using pnpm",
    "yarn": "prefer using pnpm"
  },
  "type": "module",
  "bugs": "https://github.com/siguici/colorwind/issues",
  "homepage": "https://github.com/siguici/colorwind",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://github.com/siguici"
  },
  "description": "TailwindCSS plugin simplifying light/dark color scheme management with intuitive class names.",
  "keywords": [
    "color-scheme",
    "componants",
    "css",
    "dark-mode",
    "light-mode",
    "plugin",
    "tailwindcss",
    "tailwind-color-scheme",
    "typescript",
    "utilities"
  ],
  "sideEffects": false,
  "private": false,
  "scripts": {
    "build": "pnpm cw.build && pnpm doc.build",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "cw.i": "cd packages/colorwind && pnpm i",
    "cw.up": "cd packages/colorwind && pnpm up",
    "cw.uL": "cd packages/colorwind && pnpm up -L",
    "cw.build": "cd packages/colorwind && pnpm build",
    "debug": "pnpm check && pnpm test",
    "deno.check": "cd packages/colorwind && deno task check",
    "deno.fix": "cd packages/colorwind && deno task fix",
    "dev": "pnpm doc.dev",
    "doc.i": "cd website && pnpm i",
    "doc.up": "cd website && pnpm up",
    "doc.uL": "cd website && pnpm up -L",
    "doc.dev": "cd website && pnpm dev",
    "doc.check": "cd website && pnpm check",
    "doc.build": "cd website && pnpm build",
    "doc.start": "cd website && pnpm start",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "inspect": "node --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "lint": "biome check --write .",
    "test": "vitest run",
    "test.ui": "vitest --ui",
    "test.cov": "vitest run --coverage",
    "test.watch": "vitest",
    "start": "pnpm doc.start"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "colorwind": "workspace:*",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
