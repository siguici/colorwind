{
  "name": "@siguici/colorwind",
  "version": "0.1.1",
  "imports": {
    "npm:plugwind.js": "jsr:@siguici/plugwind@^0.1.0"
  },
  "exports": {
    ".": "./jsr/index.ts",
    "./colors": "./jsr/colors.ts",
    "./plugin": "./jsr/plugin.ts",
    "./utils": "./jsr/utils.ts"
  },
  "include": ["jsr.json", "jsr/*.ts", "README.md", "LICENSE.md"],
  "exclude": [
    ".*",
    "jsr/*.test.ts",
    "js/*",
    "ts/*",
    "src/*",
    "tests/*",
    "biome.json",
    "tsconfig.json",
    "deno.lock"
  ],
  "publish": {
    "exclude": ["!jsr/*.ts"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "check": "deno task check:fmt && deno task check:lint",
    "check:fmt": "deno fmt --check",
    "check:lint": "deno check jsr/*.ts",
    "fix": "deno lint && deno fmt"
  }
}
